    <decorator name="commonheader" page="commonheader.php"/> 
 </decorators>
  <mappers>          
    <chain maps="decorators">
      <mapper type="SiteMeshRequestParamMapper">
	    <param name="param" value="decorator"/>
      </mapper>
      <mapper type="SiteMeshPathMapper">
	    <param name="index.html" value="commonheader"/>
	    <param name="iphone.html" value="commonheader"/>
	    <param name="samsung.html" value="commonheader"/>
	    <param name="repair.html" value="commonheader"/>
	    <param name="blackberry.html" value="commonheader"/>
	    <param name="404.html" value="commonheader"/>
      </mapper>
    </chain>
  </mappers>
</sitemesh>
